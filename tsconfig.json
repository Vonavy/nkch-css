{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "commonjs",
        "rootDir": "./src",
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ],
        "checkJs": true,
        "outDir": "./dist",
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}